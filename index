    <script>
        // –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –∏–≥—Ä—ã
        const CONFIG = {
            LEVELS: 10,
            ROBOT_SPEED: 3,
            ROBOT_SPEED_HOLD: 2,
            ROBOT_RADIUS: 16,
            TRASH_RADIUS: 10,
            LEVEL_NAMES: [
                '–ù–∞—á–∞–ª—å–Ω—ã–π', '–õ–µ–≥–∫–∏–π', '–ü—Ä–æ—Å—Ç–æ–π', '–°—Ä–µ–¥–Ω–∏–π', '–ù–æ—Ä–º–∞–ª—å–Ω—ã–π',
                '–°–ª–æ–∂–Ω—ã–π', '–û—á–µ–Ω—å —Å–ª–æ–∂–Ω—ã–π', '–≠–∫—Å–ø–µ—Ä—Ç', '–ú–∞—Å—Ç–µ—Ä', '–ù–µ–≤–æ–∑–º–æ–∂–Ω—ã–π'
            ]
        };

        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const levelElement = document.getElementById('level');
        const trashCountElement = document.getElementById('trashCount');
        const trashTotalElement = document.getElementById('trashTotal');
        const progressFill = document.getElementById('progressFill');
        const levelNameElement = document.getElementById('levelName');
        const timeElement = document.getElementById('time');
        const scoreElement = document.getElementById('score');
        const movesElement = document.getElementById('moves');
        const gameOverOverlay = document.getElementById('gameOverOverlay');
        const startOverlay = document.getElementById('startOverlay');
        const overlayTitle = document.getElementById('overlayTitle');
        const overlayMessage = document.getElementById('overlayMessage');
        const overlayStats = document.getElementById('overlayStats');
        const restartBtn = document.getElementById('restartBtn');
        const nextLevelBtn = document.getElementById('nextLevelBtn');
        const startBtn = document.getElementById('startBtn');

        // –°–æ—Å—Ç–æ—è–Ω–∏–µ –∏–≥—Ä—ã
        let currentLevel = 1;
        let gameState = {
            score: 0,
            time: 0,
            moves: 0,
            trashCollected: 0,
            totalTrash: 0,
            gameOver: false,
            levelComplete: false,
            gameStarted: false,
            timerInterval: null,
            activeKeys: new Set(),
            activeButtons: new Set(),
            lastUpdateTime: 0,
            moveCountedThisFrame: false,
            gameLoopRunning: true // –§–ª–∞–≥, —á—Ç–æ –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª –¥–æ–ª–∂–µ–Ω —Ä–∞–±–æ—Ç–∞—Ç—å
        };

        // –û–±—ä–µ–∫—Ç—ã –∏–≥—Ä—ã
        let robot = {
            x: 0,
            y: 0,
            radius: CONFIG.ROBOT_RADIUS,
            angle: 0
        };
        let trash = [];
        let obstacles = [];
        let roomSize = { width: 450, height: 450 };

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        function initGame() {
            canvas.width = 450;
            canvas.height = 450;
            
            // –°–±—Ä–æ—Å —Å–æ—Å—Ç–æ—è–Ω–∏—è
            gameState.score = 0;
            gameState.time = 0;
            gameState.moves = 0;
            gameState.trashCollected = 0;
            gameState.gameOver = false;
            gameState.levelComplete = false;
            gameState.activeKeys.clear();
            gameState.activeButtons.clear();
            gameState.moveCountedThisFrame = false;
            gameState.gameLoopRunning = true; // –í–∞–∂–Ω–æ: –≤–∫–ª—é—á–∞–µ–º –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
            
            updateUI();
            createLevel(currentLevel);
            gameState.lastUpdateTime = performance.now();
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª –µ—Å–ª–∏ –æ–Ω –Ω–µ –∑–∞–ø—É—â–µ–Ω
            if (gameState.gameStarted) {
                requestAnimationFrame(gameLoop);
            }
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ —É—Ä–æ–≤–Ω—è
        function createLevel(level) {
            // –û—á–∏—Å—Ç–∫–∞
            trash = [];
            obstacles = [];
            gameState.trashCollected = 0;
            
            // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —É—Ä–æ–≤–Ω—è
            const baseSize = 400;
            const sizeIncrease = Math.min((level - 1) * 30, 200);
            roomSize = {
                width: baseSize + sizeIncrease,
                height: baseSize + sizeIncrease
            };
            
            // –¶–µ–Ω—Ç—Ä–∏—Ä—É–µ–º –∫–æ–º–Ω–∞—Ç—É –Ω–∞ –∫–∞–Ω–≤–∞—Å–µ
            roomSize.offsetX = (450 - roomSize.width) / 2;
            roomSize.offsetY = (450 - roomSize.height) / 2;
            
            // –°–æ–∑–¥–∞–µ–º —Å—Ç–µ–Ω—ã
            const wallThickness = 20;
            obstacles.push({
                x: roomSize.offsetX,
                y: roomSize.offsetY,
                width: roomSize.width,
                height: wallThickness,
                type: 'wall'
            });
            obstacles.push({
                x: roomSize.offsetX,
                y: roomSize.offsetY + roomSize.height - wallThickness,
                width: roomSize.width,
                height: wallThickness,
                type: 'wall'
            });
            obstacles.push({
                x: roomSize.offsetX,
                y: roomSize.offsetY,
                width: wallThickness,
                height: roomSize.height,
                type: 'wall'
            });
            obstacles.push({
                x: roomSize.offsetX + roomSize.width - wallThickness,
                y: roomSize.offsetY,
                width: wallThickness,
                height: roomSize.height,
                type: 'wall'
            });
            
            // –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–µ –ø—Ä–µ–ø—è—Ç—Å—Ç–≤–∏—è
            const obstacleCount = Math.min(3 + level * 2, 15);
            for (let i = 0; i < obstacleCount; i++) {
                let obstacle;
                let attempts = 0;
                
                do {
                    const width = 30 + Math.random() * 50;
                    const height = 30 + Math.random() * 50;
                    
                    obstacle = {
                        x: roomSize.offsetX + wallThickness + Math.random() * (roomSize.width - width - 2 * wallThickness),
                        y: roomSize.offsetY + wallThickness + Math.random() * (roomSize.height - height - 2 * wallThickness),
                        width: width,
                        height: height,
                        radius: 10,
                        type: 'obstacle'
                    };
                    attempts++;
                } while (isOverlapping(obstacle) && attempts < 100);
                
                if (attempts < 100) {
                    obstacles.push(obstacle);
                }
            }
            
            // –ù–∞—Ö–æ–¥–∏–º –±–µ–∑–æ–ø–∞—Å–Ω—É—é –ø–æ–∑–∏—Ü–∏—é –¥–ª—è —Ä–æ–±–æ—Ç–∞
            const safePos = findSafePosition();
            robot.x = safePos.x;
            robot.y = safePos.y;
            robot.angle = 0;
            
            // –°–æ–∑–¥–∞–µ–º –º—É—Å–æ—Ä
            gameState.totalTrash = Math.min(5 + level * 3, 30);
            for (let i = 0; i < gameState.totalTrash; i++) {
                let piece;
                let attempts = 0;
                
                do {
                    piece = {
                        x: roomSize.offsetX + CONFIG.TRASH_RADIUS + wallThickness + 
                            Math.random() * (roomSize.width - 2 * wallThickness - 2 * CONFIG.TRASH_RADIUS),
                        y: roomSize.offsetY + CONFIG.TRASH_RADIUS + wallThickness + 
                            Math.random() * (roomSize.height - 2 * wallThickness - 2 * CONFIG.TRASH_RADIUS),
                        radius: CONFIG.TRASH_RADIUS,
                        collected: false,
                        type: Math.floor(Math.random() * 3)
                    };
                    attempts++;
                } while (isTrashOverlapping(piece) && attempts < 100);
                
                if (attempts < 100) {
                    trash.push(piece);
                }
            }
            
            updateUI();
        }

        // –ü–æ–∏—Å–∫ –±–µ–∑–æ–ø–∞—Å–Ω–æ–π –ø–æ–∑–∏—Ü–∏–∏ –¥–ª—è —Ä–æ–±–æ—Ç–∞
        function findSafePosition() {
            const wallThickness = 20;
            const maxAttempts = 100;
            
            for (let attempt = 0; attempt < maxAttempts; attempt++) {
                const x = roomSize.offsetX + robot.radius + wallThickness + 10 + 
                         Math.random() * (roomSize.width - 2 * wallThickness - 2 * robot.radius - 20);
                const y = roomSize.offsetY + robot.radius + wallThickness + 10 + 
                         Math.random() * (roomSize.height - 2 * wallThickness - 2 * robot.radius - 20);
                
                if (isPositionSafe(x, y)) {
                    return { x, y };
                }
            }
            
            return {
                x: roomSize.offsetX + robot.radius + wallThickness + 10,
                y: roomSize.offsetY + robot.radius + wallThickness + 10
            };
        }

        function isPositionSafe(x, y) {
            for (const obstacle of obstacles) {
                const closestX = Math.max(obstacle.x, Math.min(x, obstacle.x + obstacle.width));
                const closestY = Math.max(obstacle.y, Math.min(y, obstacle.y + obstacle.height));
                
                const distance = Math.sqrt(
                    Math.pow(x - closestX, 2) +
                    Math.pow(y - closestY, 2)
                );
                
                if (distance < robot.radius) {
                    return false;
                }
            }
            return true;
        }

        function isOverlapping(rect) {
            for (const obstacle of obstacles) {
                if (rect === obstacle) continue;
                
                const distanceX = Math.abs((rect.x + rect.width/2) - (obstacle.x + obstacle.width/2));
                const distanceY = Math.abs((rect.y + rect.height/2) - (obstacle.y + obstacle.height/2));
                
                if (distanceX < (rect.width + obstacle.width)/2 + 20 &&
                    distanceY < (rect.height + obstacle.height)/2 + 20) {
                    return true;
                }
            }
            
            const distance = Math.sqrt(
                Math.pow(rect.x + rect.width/2 - robot.x, 2) +
                Math.pow(rect.y + rect.height/2 - robot.y, 2)
            );
            
            return distance < robot.radius + Math.max(rect.width, rect.height) + 20;
        }

        function isTrashOverlapping(piece) {
            for (const obstacle of obstacles) {
                const closestX = Math.max(obstacle.x, Math.min(piece.x, obstacle.x + obstacle.width));
                const closestY = Math.max(obstacle.y, Math.min(piece.y, obstacle.y + obstacle.height));
                
                const distance = Math.sqrt(
                    Math.pow(piece.x - closestX, 2) +
                    Math.pow(piece.y - closestY, 2)
                );
                
                if (distance < piece.radius) {
                    return true;
                }
            }
            
            for (const other of trash) {
                if (piece === other) continue;
                
                const distance = Math.sqrt(
                    Math.pow(piece.x - other.x, 2) +
                    Math.pow(piece.y - other.y, 2)
                );
                if (distance < piece.radius * 2) {
                    return true;
                }
            }
            
            const distanceToRobot = Math.sqrt(
                Math.pow(piece.x - robot.x, 2) +
                Math.pow(piece.y - robot.y, 2)
            );
            
            return distanceToRobot < robot.radius + piece.radius + 20;
        }

        // –û—Ç—Ä–∏—Å–æ–≤–∫–∞
        function draw() {
            // –û—á–∏—â–∞–µ–º –∫–∞–Ω–≤–∞—Å
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // –†–∏—Å—É–µ–º —Ñ–æ–Ω
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--floor-color').trim();
            ctx.fillRect(roomSize.offsetX, roomSize.offsetY, roomSize.width, roomSize.height);
            
            // –†–∏—Å—É–µ–º —Å—Ç–µ–Ω—ã
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--wall-color').trim();
            for (const wall of obstacles.filter(o => o.type === 'wall')) {
                ctx.fillRect(wall.x, wall.y, wall.width, wall.height);
            }
            
            // –†–∏—Å—É–µ–º –≤–Ω—É—Ç—Ä–µ–Ω–Ω–∏–µ –ø—Ä–µ–ø—è—Ç—Å—Ç–≤–∏—è
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--obstacle-color').trim();
            for (const obstacle of obstacles.filter(o => o.type === 'obstacle')) {
                const radius = Math.min(obstacle.radius, obstacle.width/2, obstacle.height/2);
                
                ctx.beginPath();
                ctx.moveTo(obstacle.x + radius, obstacle.y);
                ctx.lineTo(obstacle.x + obstacle.width - radius, obstacle.y);
                ctx.quadraticCurveTo(obstacle.x + obstacle.width, obstacle.y, obstacle.x + obstacle.width, obstacle.y + radius);
                ctx.lineTo(obstacle.x + obstacle.width, obstacle.y + obstacle.height - radius);
                ctx.quadraticCurveTo(obstacle.x + obstacle.width, obstacle.y + obstacle.height, obstacle.x + obstacle.width - radius, obstacle.y + obstacle.height);
                ctx.lineTo(obstacle.x + radius, obstacle.y + obstacle.height);
                ctx.quadraticCurveTo(obstacle.x, obstacle.y + obstacle.height, obstacle.x, obstacle.y + obstacle.height - radius);
                ctx.lineTo(obstacle.x, obstacle.y + radius);
                ctx.quadraticCurveTo(obstacle.x, obstacle.y, obstacle.x + radius, obstacle.y);
                ctx.closePath();
                ctx.fill();
            }
            
            // –†–∏—Å—É–µ–º –º—É—Å–æ—Ä
            for (const piece of trash) {
                if (!piece.collected) {
                    let color;
                    switch(piece.type) {
                        case 0: color = '#4CAF50'; break;
                        case 1: color = '#FF9800'; break;
                        case 2: color = '#2196F3'; break;
                    }
                    
                    ctx.fillStyle = color;
                    ctx.beginPath();
                    ctx.arc(piece.x, piece.y, piece.radius, 0, Math.PI * 2);
                    ctx.fill();
                }
            }
            
            // –†–∏—Å—É–µ–º —Ä–æ–±–æ—Ç–∞
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--robot-color').trim();
            ctx.beginPath();
            ctx.arc(robot.x, robot.y, robot.radius, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.strokeStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--robot-outline').trim();
            ctx.lineWidth = 3;
            ctx.stroke();
            
            // –ì–ª–∞–∑ —Ä–æ–±–æ—Ç–∞
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--robot-eye').trim();
            ctx.beginPath();
            const eyeX = robot.x + Math.cos(robot.angle) * robot.radius * 0.6;
            const eyeY = robot.y + Math.sin(robot.angle) * robot.radius * 0.6;
            ctx.arc(eyeX, eyeY, robot.radius * 0.3, 0, Math.PI * 2);
            ctx.fill();
            
            // –î–≤–∞ –¥–∞—Ç—á–∏–∫–∞ —Å–ø–µ—Ä–µ–¥–∏
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--robot-sensor').trim();
            
            // –õ–µ–≤—ã–π –¥–∞—Ç—á–∏–∫
            const sensorAngle = robot.angle + Math.PI * 0.3;
            const sensor1X = robot.x + Math.cos(sensorAngle) * robot.radius * 0.8;
            const sensor1Y = robot.y + Math.sin(sensorAngle) * robot.radius * 0.8;
            ctx.beginPath();
            ctx.arc(sensor1X, sensor1Y, robot.radius * 0.2, 0, Math.PI * 2);
            ctx.fill();
            
            // –ü—Ä–∞–≤—ã–π –¥–∞—Ç—á–∏–∫
            const sensorAngle2 = robot.angle - Math.PI * 0.3;
            const sensor2X = robot.x + Math.cos(sensorAngle2) * robot.radius * 0.8;
            const sensor2Y = robot.y + Math.sin(sensorAngle2) * robot.radius * 0.8;
            ctx.beginPath();
            ctx.arc(sensor2X, sensor2Y, robot.radius * 0.2, 0, Math.PI * 2);
            ctx.fill();
            
            // –¶–µ–Ω—Ç—Ä–∞–ª—å–Ω–∞—è –∫–Ω–æ–ø–∫–∞
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--robot-details').trim();
            ctx.beginPath();
            ctx.arc(robot.x, robot.y, robot.radius * 0.4, 0, Math.PI * 2);
            ctx.fill();
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–≤–∏–∂–µ–Ω–∏—è
        function updateMovement(deltaTime) {
            if (gameState.gameOver || gameState.levelComplete) return;
            
            let dx = 0;
            let dy = 0;
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–ª–∞–≤–∏—à–∏
            if (gameState.activeKeys.has('arrowup') || gameState.activeKeys.has('w') || gameState.activeKeys.has('—Ü')) {
                dy = -1;
            }
            if (gameState.activeKeys.has('arrowdown') || gameState.activeKeys.has('s') || gameState.activeKeys.has('—ã')) {
                dy = 1;
            }
            if (gameState.activeKeys.has('arrowleft') || gameState.activeKeys.has('a') || gameState.activeKeys.has('—Ñ')) {
                dx = -1;
            }
            if (gameState.activeKeys.has('arrowright') || gameState.activeKeys.has('d') || gameState.activeKeys.has('–≤')) {
                dx = 1;
            }
            
            // –ü—Ä–æ–≤–µ—Ä—è–µ–º –∞–∫—Ç–∏–≤–Ω—ã–µ –∫–Ω–æ–ø–∫–∏
            if (gameState.activeButtons.has('up')) dy = -1;
            if (gameState.activeButtons.has('down')) dy = 1;
            if (gameState.activeButtons.has('left')) dx = -1;
            if (gameState.activeButtons.has('right')) dx = 1;
            
            // –ï—Å–ª–∏ –µ—Å—Ç—å –¥–≤–∏–∂–µ–Ω–∏–µ
            if (dx !== 0 || dy !== 0) {
                // –û–±–Ω–æ–≤–ª—è–µ–º —É–≥–æ–ª
                robot.angle = Math.atan2(dy, dx);
                
                // –í—ã–±–∏—Ä–∞–µ–º —Å–∫–æ—Ä–æ—Å—Ç—å
                const currentSpeed = gameState.activeButtons.size > 0 ? CONFIG.ROBOT_SPEED_HOLD : CONFIG.ROBOT_SPEED;
                
                // –ù–æ–≤–∞—è –ø–æ–∑–∏—Ü–∏—è
                const speedMultiplier = deltaTime / 16.67;
                const newX = robot.x + dx * currentSpeed * speedMultiplier;
                const newY = robot.y + dy * currentSpeed * speedMultiplier;
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –≥—Ä–∞–Ω–∏—Ü –∫–æ–º–Ω–∞—Ç—ã
                const wallThickness = 20;
                const minX = roomSize.offsetX + robot.radius + wallThickness;
                const maxX = roomSize.offsetX + roomSize.width - robot.radius - wallThickness;
                const minY = roomSize.offsetY + robot.radius + wallThickness;
                const maxY = roomSize.offsetY + roomSize.height - robot.radius - wallThickness;
                
                if (newX >= minX && newX <= maxX) {
                    robot.x = newX;
                }
                if (newY >= minY && newY <= maxY) {
                    robot.y = newY;
                }
                
                // –ü–æ–¥—Å—á–µ—Ç —Ö–æ–¥–æ–≤
                if (!gameState.moveCountedThisFrame) {
                    gameState.moves++;
                    movesElement.textContent = gameState.moves;
                    gameState.moveCountedThisFrame = true;
                }
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π –∏ —Å–±–æ—Ä–∞ –º—É—Å–æ—Ä–∞
                checkCollisions();
                checkTrashCollection();
            } else {
                gameState.moveCountedThisFrame = false;
            }
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π
        function checkCollisions() {
            for (const obstacle of obstacles) {
                if (obstacle.type === 'wall') continue;
                
                const closestX = Math.max(obstacle.x, Math.min(robot.x, obstacle.x + obstacle.width));
                const closestY = Math.max(obstacle.y, Math.min(robot.y, obstacle.y + obstacle.height));
                
                const distance = Math.sqrt(
                    Math.pow(robot.x - closestX, 2) +
                    Math.pow(robot.y - closestY, 2)
                );
                
                if (distance < robot.radius) {
                    gameOver();
                    return;
                }
            }
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–±–æ—Ä–∞ –º—É—Å–æ—Ä–∞
        function checkTrashCollection() {
            for (const piece of trash) {
                if (!piece.collected) {
                    const distance = Math.sqrt(
                        Math.pow(robot.x - piece.x, 2) +
                        Math.pow(robot.y - piece.y, 2)
                    );
                    
                    if (distance < robot.radius + piece.radius) {
                        piece.collected = true;
                        gameState.trashCollected++;
                        gameState.score += 100 * currentLevel;
                        
                        updateUI();
                        
                        if (gameState.trashCollected === gameState.totalTrash) {
                            levelComplete();
                        }
                    }
                }
            }
        }

        // –ó–∞–≤–µ—Ä—à–µ–Ω–∏–µ —É—Ä–æ–≤–Ω—è
        function levelComplete() {
            gameState.levelComplete = true;
            gameState.activeKeys.clear();
            gameState.activeButtons.clear();
            updateButtonStates();
            gameState.score += 500 * currentLevel;
            gameState.gameLoopRunning = false; // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
            
            overlayTitle.textContent = '–£–†–û–í–ï–ù–¨ –ü–†–û–ô–î–ï–ù!';
            overlayMessage.textContent = `–û—Ç–ª–∏—á–Ω–æ! –í—ã —Å–æ–±—Ä–∞–ª–∏ –≤–µ—Å—å –º—É—Å–æ—Ä –Ω–∞ —É—Ä–æ–≤–Ω–µ ${currentLevel}.`;
            
            overlayStats.innerHTML = `
                <p>–°—á–µ—Ç: ${gameState.score}</p>
                <p>–í—Ä–µ–º—è: ${gameState.time} —Å–µ–∫.</p>
                <p>–•–æ–¥–æ–≤: ${gameState.moves}</p>
            `;
            
            nextLevelBtn.style.display = currentLevel < CONFIG.LEVELS ? 'inline-block' : 'none';
            gameOverOverlay.style.display = 'flex';
        }

        // –ö–æ–Ω–µ—Ü –∏–≥—Ä—ã
        function gameOver() {
            gameState.gameOver = true;
            gameState.activeKeys.clear();
            gameState.activeButtons.clear();
            updateButtonStates();
            gameState.gameLoopRunning = false; // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
            
            overlayTitle.textContent = '–°–¢–û–õ–ö–ù–û–í–ï–ù–ò–ï!';
            overlayMessage.textContent = '–†–æ–±–æ—Ç –≤—Ä–µ–∑–∞–ª—Å—è –≤ –ø—Ä–µ–ø—è—Ç—Å—Ç–≤–∏–µ!';
            
            overlayStats.innerHTML = `
                <p>–£—Ä–æ–≤–µ–Ω—å: ${currentLevel}</p>
                <p>–°–æ–±—Ä–∞–Ω –º—É—Å–æ—Ä: ${gameState.trashCollected}/${gameState.totalTrash}</p>
                <p>–ò—Ç–æ–≥–æ–≤—ã–π —Å—á–µ—Ç: ${gameState.score}</p>
            `;
            
            nextLevelBtn.style.display = 'none';
            gameOverOverlay.style.display = 'flex';
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ UI
        function updateUI() {
            levelElement.textContent = currentLevel;
            trashCountElement.textContent = gameState.trashCollected;
            trashTotalElement.textContent = gameState.totalTrash;
            scoreElement.textContent = gameState.score;
            levelNameElement.textContent = CONFIG.LEVEL_NAMES[currentLevel - 1];
            
            const progress = gameState.totalTrash > 0 ? 
                (gameState.trashCollected / gameState.totalTrash) * 100 : 0;
            progressFill.style.width = `${progress}%`;
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è –∫–Ω–æ–ø–æ–∫
        function updateButtonStates() {
            const buttons = ['btnUp', 'btnDown', 'btnLeft', 'btnRight'];
            buttons.forEach(id => {
                const btn = document.getElementById(id);
                const direction = id.replace('btn', '').toLowerCase();
                if (gameState.activeButtons.has(direction)) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
        }

        // –ò–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª - –£–ü–†–û–©–ï–ù–ù–ê–Ø –í–ï–†–°–ò–Ø
        function gameLoop() {
            const currentTime = performance.now();
            const deltaTime = currentTime - gameState.lastUpdateTime;
            
            updateMovement(deltaTime);
            draw();
            
            gameState.lastUpdateTime = currentTime;
            
            // –ü–†–û–°–¢–û–ô –ü–†–ò–ù–¶–ò–ü: –µ—Å–ª–∏ –∏–≥—Ä–∞ –∞–∫—Ç–∏–≤–Ω–∞ - –ø—Ä–æ–¥–æ–ª–∂–∞–µ–º —Ü–∏–∫–ª
            if (gameState.gameStarted && !gameState.gameOver && !gameState.levelComplete) {
                requestAnimationFrame(gameLoop);
            }
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã
        function handleKeyDown(e) {
            const key = e.key.toLowerCase();
            
            if (gameState.activeKeys.has(key)) return;
            
            switch(key) {
                case 'arrowup':
                case 'w':
                case '—Ü':
                    gameState.activeKeys.add('arrowup');
                    break;
                case 'arrowdown':
                case 's':
                case '—ã':
                    gameState.activeKeys.add('arrowdown');
                    break;
                case 'arrowleft':
                case 'a':
                case '—Ñ':
                    gameState.activeKeys.add('arrowleft');
                    break;
                case 'arrowright':
                case 'd':
                case '–≤':
                    gameState.activeKeys.add('arrowright');
                    break;
                case 'r':
                case '–∫':
                    restartGame();
                    break;
                case ' ':
                    if (gameState.levelComplete) {
                        nextLevel();
                    }
                    break;
            }
        }

        function handleKeyUp(e) {
            const key = e.key.toLowerCase();
            
            switch(key) {
                case 'arrowup':
                case 'w':
                case '—Ü':
                    gameState.activeKeys.delete('arrowup');
                    break;
                case 'arrowdown':
                case 's':
                case '—ã':
                    gameState.activeKeys.delete('arrowdown');
                    break;
                case 'arrowleft':
                case 'a':
                case '—Ñ':
                    gameState.activeKeys.delete('arrowleft');
                    break;
                case 'arrowright':
                case 'd':
                case '–≤':
                    gameState.activeKeys.delete('arrowright');
                    break;
            }
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ —Å–µ–Ω—Å–æ—Ä–Ω–æ–≥–æ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
        function setupTouchControls() {
            const buttons = {
                'btnUp': 'up',
                'btnDown': 'down',
                'btnLeft': 'left',
                'btnRight': 'right'
            };
            
            Object.entries(buttons).forEach(([id, direction]) => {
                const btn = document.getElementById(id);
                
                const startHandler = (e) => {
                    e.preventDefault();
                    if (!gameState.activeButtons.has(direction)) {
                        gameState.activeButtons.add(direction);
                        updateButtonStates();
                    }
                };
                
                btn.addEventListener('touchstart', startHandler);
                btn.addEventListener('mousedown', startHandler);
                
                const endHandler = (e) => {
                    e.preventDefault();
                    gameState.activeButtons.delete(direction);
                    updateButtonStates();
                };
                
                btn.addEventListener('touchend', endHandler);
                btn.addEventListener('touchcancel', endHandler);
                btn.addEventListener('mouseup', endHandler);
                btn.addEventListener('mouseleave', endHandler);
            });
        }

        // –°–ª–µ–¥—É—é—â–∏–π —É—Ä–æ–≤–µ–Ω—å - –£–ü–†–û–©–ï–ù–ù–ê–Ø –í–ï–†–°–ò–Ø
        function nextLevel() {
            if (currentLevel < CONFIG.LEVELS) {
                currentLevel++;
                gameOverOverlay.style.display = 'none';
                
                // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –¥–ª—è –Ω–æ–≤–æ–≥–æ —É—Ä–æ–≤–Ω—è
                gameState.gameOver = false;
                gameState.levelComplete = false;
                gameState.gameLoopRunning = true;
                
                createLevel(currentLevel);
                gameState.lastUpdateTime = performance.now();
                
                // –ü–†–û–°–¢–û –ó–ê–ü–£–°–ö–ê–ï–ú –ò–ì–†–û–í–û–ô –¶–ò–ö–õ
                gameLoop();
            } else {
                overlayTitle.textContent = '–ü–û–ë–ï–î–ê!';
                overlayMessage.textContent = '–í—ã –ø—Ä–æ—à–ª–∏ –≤—Å–µ 10 —É—Ä–æ–≤–Ω–µ–π!';
                overlayStats.innerHTML = `<p>–§–∏–Ω–∞–ª—å–Ω—ã–π —Å—á–µ—Ç: ${gameState.score}</p>`;
            }
        }

        // –ü–µ—Ä–µ–∑–∞–ø—É—Å–∫ –∏–≥—Ä—ã
        function restartGame() {
            currentLevel = 1;
            gameOverOverlay.style.display = 'none';
            initGame();
        }

        // –ù–∞—á–∞–ª–æ –∏–≥—Ä—ã
        function startGame() {
            startOverlay.style.display = 'none';
            gameState.gameStarted = true;
            initGame();
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä
            if (gameState.timerInterval) {
                clearInterval(gameState.timerInterval);
            }
            gameState.timerInterval = setInterval(() => {
                if (!gameState.gameOver && !gameState.levelComplete && gameState.gameStarted) {
                    gameState.time++;
                    timeElement.textContent = gameState.time;
                }
            }, 1000);
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
            gameLoop();
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        function init() {
            // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
            document.addEventListener('keydown', handleKeyDown);
            document.addEventListener('keyup', handleKeyUp);
            setupTouchControls();
            
            // –ö–Ω–æ–ø–∫–∏ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
            startBtn.addEventListener('click', startGame);
            restartBtn.addEventListener('click', restartGame);
            nextLevelBtn.addEventListener('click', nextLevel);
            
            // –ü–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω–∞—è –æ—Ç—Ä–∏—Å–æ–≤–∫–∞
            canvas.width = 450;
            canvas.height = 450;
            ctx.fillStyle = getComputedStyle(document.documentElement)
                .getPropertyValue('--floor-color').trim();
            ctx.fillRect(0, 0, canvas.width, canvas.height);
        }

        // –ó–∞–ø—É—Å–∫ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        window.addEventListener('load', init);
    </script>
</body>
</html>
